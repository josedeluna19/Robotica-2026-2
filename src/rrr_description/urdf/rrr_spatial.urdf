<?xml version="1.0"?>
<robot name="rrr_spatial">

  <!-- BASE -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="gray"><color rgba="0.6 0.6 0.6 1"/></material>
    </visual>
  </link>

  <!-- LINK 1 (5 cm) -->
  <link name="link1">
    <visual>
      <geometry><cylinder radius="0.02" length="0.05"/></geometry>
      <origin xyz="0 0 0.025" rpy="0 1.5708 0"/>
      <material name="cyan"><color rgba="0 1 1 1"/></material>
    </visual>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/> 
    <limit lower="-3.14" upper="3.14" velocity="1.0" effort="10"/>
  </joint>

  <!-- LINK 2 (20 cm) -->
  <link name="link2">
    <visual>
      <geometry><cylinder radius="0.02" length="0.20"/></geometry>
      <origin xyz="0 0 0.10" rpy="0 1.5708 0"/>
      <material name="green"><color rgba="0 1 0 1"/></material>
    </visual>
  </link>

  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.05 0 0" rpy="0 0 0"/> 
    <axis xyz="0 1 0"/> 
    <limit lower="-3.14" upper="3.14" velocity="1.0" effort="10"/>
  </joint>

  <!-- LINK 3 (35 cm) -->
  <link name="link3">
    <visual>
      <geometry><cylinder radius="0.02" length="0.35"/></geometry>
      <origin xyz="0 0 0.175" rpy="0 1.5708 0"/>
      <material name="yellow"><color rgba="1 1 0 1"/></material>
    </visual>
  </link>

  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0.20 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/> 
    <limit lower="-3.14" upper="3.14" velocity="1.0" effort="10"/>
  </joint>

  <!-- END EFFECTOR -->
  <link name="ee">
    <visual>
      <geometry><sphere radius="0.02"/></geometry>
      <origin xyz="0.35 0 0" rpy="0 0 0"/>
      <material name="red"><color rgba="1 0 0 1"/></material>
    </visual>
  </link>

  <joint name="joint_ee" type="fixed">
    <parent link="link3"/>
    <child link="ee"/>
    <origin xyz="0.35 0 0" rpy="0 0 0"/>
  </joint>

</robot>

