<?xml version="1.0"?>
<robot name="robot2_spatial">

  <!-- =========================
       Definición de eslabones
       ========================= -->

  <!-- Base fija -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.08"/>
      </geometry>
      <material name="red_dark">
        <color rgba="0.8 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Eslabón 0: Base rotatoria (5 cm de altura) -->
  <link name="turret_link">
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.06 0.06 0.05"/>
      </geometry>
      <material name="red1">
        <color rgba="1.0 0.2 0.2 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Eslabón 1: Primer eslabón RR (20 cm) -->
  <link name="shoulder_link">
    <visual>
      <origin xyz="0.1 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.03 0.03"/>
      </geometry>
      <material name="red2">
        <color rgba="1.0 0.4 0.4 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Eslabón 2: Segundo eslabón RR (35 cm) -->
  <link name="arm_link">
    <visual>
      <origin xyz="0.175 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.35 0.03 0.03"/>
      </geometry>
      <material name="red3">
        <color rgba="1.0 0.6 0.6 1.0"/>
      </material>
    </visual>
  </link>


  <!-- =========================
       Definición de juntas
       ========================= -->

  <!-- Junta 0: Rotación de base en Z (theta_0_1) -->
  <joint name="turret_joint" type="revolute">
    <parent link="base_link"/>
    <child  link="turret_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" lower="-3.14" upper="3.14" velocity="3.14"/>
  </joint>

  <!-- Junta 1: Primer eslabón RR (theta_1_2) - rotación en Z tras girar 90° en X -->
  <joint name="shoulder_joint" type="revolute">
    <parent link="turret_link"/>
    <child  link="shoulder_link"/>
    <origin xyz="0 0 0.05" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" lower="0" upper="1.57" velocity="1.57"/>
  </joint>

  <!-- Junta 2: Segundo eslabón RR (theta_2_3) - rotación en Z local -->
  <joint name="arm_joint" type="revolute">
    <parent link="shoulder_link"/>
    <child  link="arm_link"/>
    <origin xyz="0.2 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" lower="-1.57" upper="1.57" velocity="1.57"/>
  </joint>

</robot>