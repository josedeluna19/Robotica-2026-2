<?xml version="1.0"?>
<robot name="robot2_spatial">

  <link name="base_link">
    <visual>
      <geometry><box size="0.25 0.25 0.1"/></geometry>
      <material name="red_dark"><color rgba="0.8 0.0 0.0 1.0"/></material>
    </visual>
  </link>

  <link name="link1">
    <visual>
      <geometry><cylinder radius="0.05" length="0.5"/></geometry>
      <material name="red1"><color rgba="1.0 0.2 0.2 1.0"/></material>
    </visual>
  </link>
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.1416" upper="3.1416" effort="20" velocity="5"/>
  </joint>

  <link name="link2">
    <visual>
      <geometry><cylinder radius="0.05" length="0.4"/></geometry>
      <material name="red2"><color rgba="1.0 0.4 0.4 1.0"/></material>
    </visual>
  </link>
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.5" rpy="0 1.5708 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.1416" upper="3.1416" effort="20" velocity="5"/>
  </joint>

  <link name="link3">
    <visual>
      <geometry><cylinder radius="0.05" length="0.3"/></geometry>
      <material name="red3"><color rgba="1.0 0.6 0.6 1.0"/></material>
    </visual>
  </link>
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0 0 0.4" rpy="1.5708 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-3.1416" upper="3.1416" effort="20" velocity="5"/>
  </joint>

</robot>
