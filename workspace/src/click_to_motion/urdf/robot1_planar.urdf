<?xml version="1.0"?>
<robot name="robot1_planar">

  <link name="base_link">
    <visual>
      <geometry><box size="0.2 0.2 0.1"/></geometry>
      <material name="gray"><color rgba="0.5 0.5 0.5 1.0"/></material>
    </visual>
  </link>

  <link name="link1">
    <visual>
      <geometry><box size="0.4 0.05 0.05"/></geometry>
      <material name="blue1"><color rgba="0.0 0.4 1.0 1.0"/></material>
    </visual>
  </link>
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.1416" upper="3.1416" effort="10" velocity="5"/>
  </joint>

  <link name="link2">
    <visual>
      <geometry><box size="0.35 0.05 0.05"/></geometry>
      <material name="blue2"><color rgba="0.2 0.6 1.0 1.0"/></material>
    </visual>
  </link>
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.4 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.1416" upper="3.1416" effort="10" velocity="5"/>
  </joint>

  <link name="link3">
    <visual>
      <geometry><box size="0.3 0.05 0.05"/></geometry>
      <material name="blue3"><color rgba="0.4 0.8 1.0 1.0"/></material>
    </visual>
  </link>
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0.35 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.1416" upper="3.1416" effort="10" velocity="5"/>
  </joint>

</robot>
